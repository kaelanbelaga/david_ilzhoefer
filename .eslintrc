{
  "parser": "babel-eslint",
  "plugins": ["import", "prettier", "react"],
  "settings": {
    "import/resolver": "webpack",
    "react": { "version": "16" }
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "extends": [
    "airbnb/base",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "globals": {
    "document": true,
    "window": true,
    "btoa": true
  },
  "rules": {
    "curly": [1, "all"],
    "import/no-amd": 2,
    "import/no-commonjs": 2,
    "import/no-nodejs-modules": 2,
    "no-debugger": 1,
    "no-param-reassign": [1, { "props": false }],
    "no-unused-vars": [
      1,
      { "args": "all", "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
    ],
    "no-use-before-define": [2, { "functions": false, "variables": false }],
    "prettier/prettier": 1,
    "react/display-name": 0,
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    "react/prop-types": 0,
    "vars-on-top": 0
  },
  "overrides": [
    {
      "files": ["src/utils/textExtract.js", "src/utils/textExtractRegistry.js"],
      "rules": { "no-console": 0 }
    },
    {
      "files": ["src/index.js"],
      "rules": { "import/first": 0 }
    },
    {
      "files": ["src/Components/NotFoundErrorPage.js"],
      "rules": { "class-methods-use-this": 0 }
    },
    {
      "files": ["src/Components/GoogleAnalytics.js"],
      "rules": {
        "func-names": 0,
        "no-undef": 0,
        "prefer-rest-params": 0,
        "class-methods-use-this": 0
      }
    }
  ]
}
